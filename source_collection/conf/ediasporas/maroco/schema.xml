<?xml version="1.0" encoding="UTF-8" ?>

<schema name="ediasporas" version="1">

  <types>

    <fieldType name="string"     class="solr.StrField"      sortMissingLast="true" omitNorms="true"/>
  
    <fieldType name="date"       class="solr.TrieDateField" precisionStep="0" omitNorms="true" positionIncrementGap="0"/>

    <fieldType name="int"        class="solr.TrieIntField" precisionStep="0" omitNorms="true" positionIncrementGap="0"/>
   
    <fieldType name="float"      class="solr.TrieFloatField" precisionStep="0" omitNorms="true" positionIncrementGap="0"/>
   
    <fieldType name="long"       class="solr.TrieLongField" precisionStep="0" omitNorms="true" positionIncrementGap="0"/>
   
    <fieldType name="double"     class="solr.TrieDoubleField" precisionStep="0" omitNorms="true" positionIncrementGap="0"/> 

    <fieldType name="boolean"    class="solr.BoolField" sortMissingLast="true" omitNorms="true"/>    

  </types>


  <fields>

    <field name="_indexed_at_tdt"           type="date"          indexed="false" stored="false"  multiValued="false" default="NOW" />
    <field name="_version_"                 type="long"          indexed="true"  stored="true"  multiValued="false"/>
    <field name="id"                        type="string"        indexed="true"  stored="true"  multiValued="false" required="true" />
    <field name="active"                    type="boolean"       indexed="true"  stored="true"  multiValued="false"/>
    
    <field name="client_country"            type="string"        indexed="true"  stored="true"  docValues="true" multiValued="false"/>
    <field name="client_ip"                 type="string"        indexed="true"  stored="true"  docValues="true" multiValued="false"/>
    <field name="client_lang"               type="string"        indexed="true"  stored="true"  docValues="true" multiValued="true"/>
    <field name="corpus"                    type="string"        indexed="true"  stored="true"  docValues="true" multiValued="false"/>
    
    <field name="crawl_session"             type="string"        indexed="true"  stored="true"  docValues="true" multiValued="true"/>
    <field name="first_crawl_session"       type="string"        indexed="true"  stored="true"  docValues="true" multiValued="false"/>
    <field name="last_crawl_session"        type="string"        indexed="true"  stored="true"  docValues="true" multiValued="false"/>
    
    <field name="crawl_session_date"        type="date"          indexed="true"  stored="true"  docValues="true" multiValued="true"/>
    <field name="first_crawl_session_date"  type="date"          indexed="true"  stored="true"  docValues="true" multiValued="fasle"/>
    <field name="last_crawl_session_date"   type="date"          indexed="true"  stored="true"  docValues="true" multiValued="true"/>
    
    <field name="date"                      type="date"          indexed="true"  stored="true"  docValues="true" multiValued="true"/>
    <field name="last_modified"             type="date"          indexed="true"  stored="true"  docValues="true" multiValued="false"/>
    <field name="first_modified"            type="date"          indexed="true"  stored="true"  docValues="true" multiValued="false"/>

    <field name="ip"                        type="string"        indexed="true"  stored="true"  docValues="true" multiValued="false"/>
    <field name="length"                    type="double"        indexed="true"  stored="true"  docValues="true" multiValued="false"/>
    <field name="level"                     type="int"           indexed="true"  stored="true"  docValues="true" multiValued="false"/>
    
    <field name="link_in_path"              type="string"        indexed="true"   stored="true"   docValues="true" multiValued="true"/>
    <field name="link_in_url"               type="string"        indexed="false"  stored="false"  docValues="true" multiValued="true"/>
    <field name="link_out_social"           type="string"        indexed="true"   stored="true"   docValues="true" multiValued="true"/>
    <field name="link_out_url"              type="string"        indexed="true"   stored="true"   docValues="true" multiValued="true"/>
    <field name="link_out_corpus"           type="string"        indexed="true"   stored="true"   docValues="true" multiValued="true"/>   
    
    <field name="page"                      type="int"           indexed="true"  stored="true"  docValues="true" multiValued="false"/>            
    <field name="referer_url"               type="string"        indexed="true"  stored="true"  docValues="true" multiValued="false"/>
    <field name="site"                      type="string"        indexed="true"  stored="true"  docValues="true" multiValued="false"/>
    
    <field name="type"                      type="string"        indexed="true"  stored="true"  docValues="true" multiValued="false"/>
    <field name="url"                       type="string"        indexed="true"  stored="true"  docValues="true" multiValued="false"/>
    <field name="url_sha"                   type="string"        indexed="true"  stored="true"  docValues="true" multiValued="false"/>    

    <!-- extracted from the archived page -->

    <field name="page_meta_title"           type="string"       indexed="true"  stored="true"  docValues="false" multiValued="false" default=""/>
    <field name="page_meta_description"     type="string"       indexed="true"  stored="true"  docValues="false" multiValued="false" default=""/>
    <field name="page_meta_img"             type="string"       indexed="true"  stored="true"  docValues="false" multiValued="false" default=""/>
    <field name="page_meta_twitter_author"  type="string"       indexed="true"  stored="true"  docValues="true"  multiValued="false" default=""/>
    <field name="page_meta_date"            type="date"         indexed="true"  stored="true"  docValues="true"  multiValued="false"/>    
    <field name="page_meta_author"          type="string"       indexed="true"  stored="true"  docValues="true"  multiValued="false" default=""/>    

    <field name="page_title"                type="string"       indexed="true"  stored="true"  docValues="false" multiValued="false" default=""/>
    <field name="page_date"                 type="date"         indexed="true"  stored="true"  docValues="true"  multiValued="false"/>
    <field name="page_author"               type="string"       indexed="true"  stored="true"  docValues="true"  multiValued="false" default=""/>

    <!-- <field name="elements"                  type="string"       indexed="true"  stored="true"  multiValued="true"/>  -->

    <!-- Needed for nested elements -->

    <field name="_root_" type="string" indexed="true" stored="false" multiValued="true"/>

    <field name="element_type"             type="string"       indexed="true"  stored="true"  docValues="true"  multiValued="false" default=""/>
    <field name="element_markup"           type="string"       indexed="true"  stored="true"  docValues="false" multiValued="false" default=""/>
    <field name="element_depth"            type="int"          indexed="true"  stored="true"  docValues="false" multiValued="false"/>
    <field name="element_offset"           type="int"          indexed="true"  stored="true"  docValues="false" multiValued="false"/>
    <field name="element_content"          type="string"       indexed="true"  stored="true"  docValues="false" multiValued="false" default=""/>

    <!-- concatenated in one searchable field -->

    <field name="page_content"              type="string"       indexed="true"  stored="false" multiValued="true"/>

   </fields>

  <uniqueKey>id</uniqueKey>

  <copyField source="page_meta_description"  dest="page_content"/>
  <copyField source="page_title"             dest="page_content"/>  
  <copyField source="element_content"        dest="page_content"/>  

  <similarity class="solr.DefaultSimilarityFactory"/>

</schema>
